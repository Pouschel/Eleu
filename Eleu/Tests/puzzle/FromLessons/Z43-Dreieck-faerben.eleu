fun s2(ti)
{
  assert _puzzle(p, ti);
  var rows = parseInt(read()); move();
  var cols = 1; move();
  repeat(rows)
  {
    move("S");
    repeat(cols)
    {
      paint("blue"); move();
    }
    turn("around");
    if (cols % 2 == 0)    
      move();
    cols = cols + 1;
  }
  assert _isSolved();
}
